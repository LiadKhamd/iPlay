<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainVerificationMail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mail_verification_animation"
    tools:context=".Login.MailVerificationFragment">

    <TextView
        android:id="@+id/verify_massage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:text="@string/verify_mail"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <Button
        android:id="@+id/send_again_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_massage"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_style"
        android:text="@string/send_again"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/send_again_button"
        android:layout_toEndOf="@+id/send_again_button"
        android:background="@drawable/button_style"
        android:text="@string/logout"
        android:textColor="@color/white" />
</RelativeLayout>